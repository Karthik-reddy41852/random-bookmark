{
    "manifest_version": 3,
    "name": "Random X Bookmark",
    "version": "1.0",
    "description": "Displays a random bookmarked tweet from your X account.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html"
    },
    "background":{
        "service_worker": "background.js"
    }
}